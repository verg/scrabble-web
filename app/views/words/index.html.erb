<h1>Scrabble-Web</h1>

<% if @last_word %>
  <div id='last_word'>
    <h3>Results</h3>
    <div class='word'>
      <%= @last_word.word %>
    </div>
    <div class='score'>
      <%= @last_word.score %>
    </div>
  </div>

<% end %>

<h3>Score a Word</h3>
<%= form_for @new_word do |f| %>
  <%= f.text_field :word %>
  <%= f.submit "Score" %>
<% end %>

<div id="previous_words">
  <h3>Previous Words</h3>
  <ul>
    <% @previous_words.each do |word| %>
      <li id="word-<%= word.word %>"><b><%= word.word %></b> | <%= word.score %> points | Plays: <%= word.plays.count %> <%= render 'plays', word: word %> <%= button_to("Play", play_word_path(word)) %></li>
    <% end %>
  </ul>
</div>
